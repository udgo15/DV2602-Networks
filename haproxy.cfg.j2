global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend bk_service

backend bk_service
    balance roundrobin
    option httpchk GET /
    {% for server in groups['webservers'] %}
    server {{ server }} {{ hostvars[server]['ansible_default_ipv4']['address'] }}:80 check
    {% endfor %}